{
  "name": "cs2-server-picker",
  "version": "1.0.0",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build": "npm run prepare && node scripts/prepare-icons.js && electron-builder",
    "prepare": "node scripts/prepare-tools.js",
    "test-build": "npm run build && electron dist/linux-unpacked/cs2-server-picker || electron dist/win-unpacked/cs2-server-picker.exe"
  },
  "keywords": [],
  "author": {
    "name": "EbadiDev",
    "email": "ebadidev@gmail.com"
  },
  "license": "ISC",
  "type": "commonjs",
  "description": "CS2 Server Picker - A tool to select and manage CS2 game servers",
  "dependencies": {
    "@electron/remote": "^2.1.2",
    "adm-zip": "^0.5.10",
    "axios": "^1.6.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0",
    "png-to-ico": "^2.1.8",
    "sharp": "^0.33.1"
  },
  "build": {
    "appId": "com.cs2serverpicker.app",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "public/**/*",
      "resources/**/*",
      "scripts/**/*"
    ],
    "extraResources": [
      {
        "from": "resources/${platform}",
        "to": "resources/${platform}",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/icons/icon.ico",
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "icon": "build/icons/512x512.png",
      "category": "Utility",
      "maintainer": "EbadiDev <ebadidev@gmail.com>",
      "artifactName": "${productName}-${version}.${ext}"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "build/icons/icon.icns"
    },
    "publish": {
      "provider": "github",
      "releaseType": "release"
    }
  }
}
