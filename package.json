{
  "name": "cs2-server-picker",
  "version": "1.0.0",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build": "npm run prepare && electron-builder",
    "prepare": "node scripts/prepare-tools.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "description": "CS2 Server Picker - A tool to select and manage CS2 game servers",
  "dependencies": {
    "@electron/remote": "^2.1.2",
    "axios": "^1.6.0",
    "adm-zip": "^0.5.10"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0"
  },
  "build": {
    "appId": "com.cs2serverpicker.app",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "public/**/*",
      "resources/**/*"
    ],
    "extraResources": [
      {
        "from": "resources/${platform}",
        "to": "resources/${platform}",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": ["nsis"],
      "icon": "resources/logo/logo.jpg"
    },
    "linux": {
      "target": ["AppImage", "deb", "rpm"],
      "icon": "resources/logo/logo.jpg",
      "category": "Utility"
    },
    "mac": {
      "target": ["dmg"],
      "icon": "resources/logo/logo.jpg"
    },
    "publish": {
      "provider": "github",
      "releaseType": "release"
    }
  }
}
